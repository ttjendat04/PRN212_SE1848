<Window x:Class="SportBooking_WPF.Views.Tournament.RegistrationApprovalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Duyệt đăng ký" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Danh sách đăng ký giải đấu"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 10"
                   Foreground="#333"/>

        <DataGrid x:Name="dgRegistrations"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,10,0,50"
                  AlternatingRowBackground="#FAFAFA"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RegistrationId}" Width="50"/>
                <DataGridTextColumn Header="Người đăng ký" Binding="{Binding User.FullName}" Width="150"/>
                <DataGridTextColumn Header="Ngày đăng ký" Binding="{Binding RegisterDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="120"/>
                <DataGridTextColumn Header="Tên đội" Binding="{Binding TeamName}" Width="150"/>
                <DataGridTextColumn Header="Số thành viên" Binding="{Binding NumberOfMembers}" Width="100"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1" Margin="0 0 0 10">
            <Button Content="Duyệt" Width="100" Margin="5" Click="btnApprove_Click" Background="#3CB371" Foreground="White"/>
            <Button Content="Từ chối" Width="100" Margin="5" Click="btnReject_Click" Background="#CD5C5C" Foreground="White"/>
            <Button Content="Đóng" Width="100" Margin="5" Click="btnClose_Click" Background="#808080" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
