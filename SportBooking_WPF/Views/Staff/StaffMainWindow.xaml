<Window x:Class="SportBooking_WPF.Views.Staff.StaffMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportBooking_WPF.Views.Staff"
        mc:Ignorable="d"
        Title="Staff Dashboard"
        Height="600" Width="900"
        Background="#F4F4F4"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Top Menu Bar -->
        <Border Background="#2E7D32" DockPanel.Dock="Top" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Booking"
                        Name="btnBooking"
                        Width="100"
                        Margin="5"
                        Padding="10"
                        Click="btnBooking_Click"
                        Background="#66BB6A"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Content="User"
                        Name="btnUser"
                        Width="100"
                        Margin="5"
                        Padding="10"
                        Click="btnUser_Click"
                        Background="#66BB6A"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Background="White" Margin="10" CornerRadius="10" Padding="10">
            <ContentControl x:Name="mainContent"/>
        </Border>
    </DockPanel>
</Window>
