<Window x:Class="SportBooking_WPF.Views.Manager.ManagerDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Quản lý" Height="350" Width="400">
    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="DASHBOARD MANAGER" FontSize="22" FontWeight="Bold" Foreground="#2E8B57" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button x:Name="BtnUserManagement" Content="Quản lý người dùng" Height="40" Margin="0,0,0,10" Click="BtnUserManagement_Click"/>
            <Button x:Name="BtnCourtManagement" Content="Quản lý sân bóng" Height="40" Margin="0,0,0,10" Click="BtnCourtManagement_Click"/>
            <Button x:Name="BtnRevenueReport" Content="Xem báo cáo doanh thu" Height="40" Click="BtnRevenueReport_Click"/>
        </StackPanel>
    </Grid>
</Window> 