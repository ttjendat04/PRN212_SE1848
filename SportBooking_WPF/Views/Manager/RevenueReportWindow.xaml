<Window x:Class="SportBooking_WPF.Views.Manager.RevenueReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportBooking_WPF.Views.Manager"
        mc:Ignorable="d"
        Title="Báo cáo doanh thu" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#2E8B57">
        <Border CornerRadius="10" Background="White" 
                Margin="20" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="BÁO CÁO DOANH THU" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#2E8B57"
                               HorizontalAlignment="Center"/>

                    <!-- Filter Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                        <Button x:Name="BtnDaily" 
                                Content="Theo ngày" 
                                Width="120" 
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#2E8B57"
                                Foreground="White"
                                BorderBrush="#2E8B57"
                                Click="BtnDaily_Click"/>

                        <Button x:Name="BtnMonthly" 
                                Content="Theo tháng" 
                                Width="120" 
                                Height="35"
                                Margin="0,0,10,0"
                                Background="#2E8B57"
                                Foreground="White"
                                BorderBrush="#2E8B57"
                                Click="BtnMonthly_Click"/>

                        <Button x:Name="BtnChart" 
                                Content="Biểu đồ đặt sân" 
                                Width="120" 
                                Height="35"
                                Background="#2E8B57"
                                Foreground="White"
                                BorderBrush="#2E8B57"
                                Click="BtnChart_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- DataGrid -->
                <Border Grid.Row="1" 
                        BorderThickness="1" 
                        BorderBrush="#CCCCCC"
                        CornerRadius="5">
                    <DataGrid x:Name="dgRevenue"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              RowHeaderWidth="0"
                              AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ngày/Tháng" 
                                               Binding="{Binding DateOrMonth}" 
                                               Width="*"
                                               Foreground="#333333"/>
                            <DataGridTextColumn Header="Tổng doanh thu" 
                                               Binding="{Binding TotalRevenue, StringFormat=N0}" 
                                               Width="*"
                                               Foreground="#333333"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>