<Window x:Class="SportBooking_WPF.Views.Tournament.TournamentEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportBooking_WPF.Views.Tournament"
        mc:Ignorable="d"
        Title="TournamentEditDialog" Height="662" Width="500" WindowStartupLocation="CenterScreen">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Tên giải đấu:"/>
            <TextBox x:Name="txtTitle"/>

            <TextBlock Text="Môn thể thao:" Margin="0,10,0,0"/>
            <ComboBox x:Name="cbSports" DisplayMemberPath="SportName" SelectedValuePath="SportId"/>


            <TextBlock Text="Người tổ chức:" Margin="0,10,0,0" x:Name="lblOrganizer"/>
            <ComboBox x:Name="cbOrganizers" DisplayMemberPath="FullName" SelectedValuePath="UserId" Visibility="Collapsed"/>

            <TextBlock Text="Mô tả:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtDescription" Height="60" TextWrapping="Wrap"/>

            <TextBlock Text="Thời gian bắt đầu:" Margin="0,10,0,0"/>
            <DatePicker x:Name="dpStartDate"/>

            <TextBlock Text="Thời gian kết thúc:" Margin="0,10,0,0"/>
            <DatePicker x:Name="dpEndDate"/>

            <TextBlock Text="Hạn đăng ký:" Margin="0,10,0,0"/>
            <DatePicker x:Name="dpRegistrationDeadline"/>

            <TextBlock Text="Địa điểm tổ chức:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtLocation"/>

            <TextBlock Text="Loại giải đấu:" Margin="0,10,0,0"/>
            <ComboBox x:Name="cbTeamType" SelectedValuePath="Tag">
                <ComboBoxItem Content="Giải đấu đội" Tag="true"/>
                <ComboBoxItem Content="Giải đấu cá nhân" Tag="false"/>
            </ComboBox>

            <TextBlock x:Name="lblMaxParticipants" Text="Số người tối đa:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtMaxParticipants"/>

            <TextBlock Text="Trạng thái:" Margin="0,10,0,0"/>
            <ComboBox x:Name="cbStatus" SelectedValuePath="Tag">
                <ComboBoxItem Content="Mở đăng ký" Tag="Mở đăng ký"/>
                <ComboBoxItem Content="Đóng đăng ký" Tag="Đóng đăng ký"/>
                <ComboBoxItem Content="Đang diễn ra" Tag="Đang diễn ra"/>
                <ComboBoxItem Content="Hoàn tất" Tag="Hoàn tất"/>
                <ComboBoxItem Content="Huỷ" Tag="Huỷ"/>
            </ComboBox>

            <TextBlock Text="Luật thi đấu:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtRules" Height="60" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Lưu" Width="80" Margin="5" Click="BtnSave_Click"/>
                <Button Content="Huỷ" Width="80" Margin="5" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
