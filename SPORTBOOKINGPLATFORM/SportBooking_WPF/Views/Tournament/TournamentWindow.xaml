<Window x:Class="SportBooking_WPF.Views.Tournament.TournamentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportBooking_WPF.Views.Tournament"
        mc:Ignorable="d"
        Title="TournamentWindow" Height="450" Width="1362" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Danh sách Giải đấu" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

        <!-- Danh sách giải đấu -->
        <DataGrid x:Name="dgTournaments" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" Margin="0 10 0 50">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TournamentId}" Width="50"/>
                <DataGridTextColumn Header="Tên giải" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Môn" Binding="{Binding Sport.SportName}" Width="100"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="Người tổ chức" Binding="{Binding Organizer.FullName}" Width="150"/>
                <DataGridTextColumn Header="Bắt đầu" Binding="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="100"/>
                <DataGridTextColumn Header="Kết thúc" Binding="{Binding EndDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="100"/>
                <DataGridTextColumn Header="Hạn đăng ký" Binding="{Binding RegistrationDeadline, StringFormat='{}{0:dd/MM/yyyy}'}" Width="100"/>
                <DataGridTextColumn Header="Địa điểm" Binding="{Binding Location}" Width="120"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="SL tối đa" Binding="{Binding MaxParticipants}" Width="80"/>
                <DataGridCheckBoxColumn Header="Theo đội" Binding="{Binding IsTeamBased}" Width="70"/>
                <DataGridTextColumn Header="Luật lệ" Binding="{Binding Rules}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Các nút chức năng -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0 0 0 10" Grid.Row="1">
            <Button x:Name="btnAdd" Content="Thêm" Width="80" Margin="5" Click="btnAdd_Click" Visibility="Collapsed" d:Visibility="Visible"/>
            <Button x:Name="btnEdit" Content="Sửa" Width="80" Margin="5" Click="btnEdit_Click" Visibility="Collapsed" d:Visibility="Visible"/>
            <Button x:Name="btnDelete" Content="Xoá" Width="80" Margin="5" Click="btnDelete_Click" Visibility="Collapsed" d:Visibility="Visible"/>
        </StackPanel>
    </Grid>
</Window>
